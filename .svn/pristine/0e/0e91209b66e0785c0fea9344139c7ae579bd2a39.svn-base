<template>
	<div>
		<!-- 表单 -->
		<el-form ref="EditForm" :model="EditForm" label-width="170px" :rules="EditRules" class="ee">
			<el-row type="flex" class="row-bg">
				<el-col :span="7">
					<el-form-item label="活动名称" prop="dl_name">
						<el-input v-model="EditForm.dl_name" placeholder="请输入活动名称"></el-input>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="14">
					<el-form-item label="活动规则" prop="dl_rule">
						<el-input v-model="EditForm.dl_rule" placeholder="请输入活动规则"></el-input>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="14">
					<el-form-item label="活动内容" prop="dl_content">
						<el-input type="textarea" v-model="EditForm.dl_content" rows="3" placeholder="请输入活动内容"></el-input>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="14">
					<el-form-item label="活动时间" prop="dl_time">
						<el-date-picker
							v-model="EditForm.dl_time"
							type="datetimerange"
							range-separator="-"
							start-placeholder="开始日期"
							end-placeholder="结束日期"
							style="width: 100%;"
						>
						</el-date-picker>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="7">
					<el-form-item label="每人每天参与次数" prop="dl_limit">
						<el-input v-model.number="EditForm.dl_limit" placeholder="0为不限制"></el-input>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="7">
					<el-form-item label="每人最多参与次数" prop="dl_maxtimes">
						<el-input v-model.number="EditForm.dl_maxtimes" placeholder="0为不限制"></el-input>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="7">
					<el-form-item label="每人最多能中奖次数" prop="dl_maxwin">
						<el-input v-model.number="EditForm.dl_maxwin" placeholder="0为不限制"></el-input>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="7">
					<el-form-item label="是否有赞助商家" prop="dl_has_sponsor">
						<el-radio v-model="EditForm.dl_has_sponsor" label="1">是</el-radio>
						<el-radio v-model="EditForm.dl_has_sponsor" label="0">否</el-radio>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="7">
					<el-form-item label="主页面是否需要广告" prop="dl_has_ad">
						<el-radio v-model="EditForm.dl_has_ad" label="1">是</el-radio>
						<el-radio v-model="EditForm.dl_has_ad" label="0">否</el-radio>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="7">
					<el-form-item label="是否有提供设计" prop="dl_has_design">
						<el-radio v-model="EditForm.dl_has_design" label="1">是</el-radio>
						<el-radio v-model="EditForm.dl_has_design" label="0">否</el-radio>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="7">
					<el-form-item label="设计需求" prop="dl_design">
						<el-input v-model="EditForm.dl_design" placeholder="请输入设计需求（有提供设计时，必须填写）"></el-input>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="7">
					<el-form-item label="分享的标题内容" prop="dl_share_title">
						<el-input v-model="EditForm.dl_share_title" placeholder="分享的标题内容（需要分享功能时，必须填写）"></el-input>
					</el-form-item>
				</el-col>
			</el-row>
			<el-row type="flex" class="row-bg">
				<el-col :span="14">
					<el-form-item label="分享的描述信息" prop="dl_share_content">
						<el-input type="textarea" v-model="EditForm.dl_share_content" rows="3" placeholder="分享的描述信息（需要分享功能时，必须填写）"></el-input>
					</el-form-item>
				</el-col>
			</el-row>			
		</el-form>

		<el-footer>
			<el-button type="primary" @click="goBack" size="small" icon="el-icon-arrow-left">返回</el-button>
			<el-button type="primary" @click="submitEditForm('EditForm')" size="small" icon="el-icon-edit-outline">保存</el-button>
		</el-footer>
	</div>
</template>

<script>
// 引入接口
import api from '@/api/api.js'
// 获取token
import { getToken , removeToken } from '@/utils/auth'
// 时间过滤器
import {formatDate} from '@/filter/date.js';

export default {
	name: 'componentspage1',
	data() {
		return {
			EditForm : {
				dl_name : '',
				dl_time : '',
				dl_rule : '',
				dl_content : '',
				dl_limit : '',
				dl_maxtimes : '',
				dl_maxwin : '',
				dl_has_sponsor : '',
				dl_has_ad : '',
				dl_has_design : '',
				dl_design : '',
				dl_share_title : '',
				dl_share_content : ''
			},
			EditRules : {
				dl_name : [{required: true, message : '请输入活动名称', trigger: 'blur'}],
				dl_time : [{required: true, message : '请输入活动时间', trigger: 'blur'}],
				dl_rule : [{required: true, message : '请输入活动规则', trigger: 'blur'}],
				dl_content : [{required: true, message : '请输入活动内容', trigger: 'blur'}],
				dl_limit : [{required: true, message : '请输入每人每天参与次数（0为不限制）', trigger: 'blur'}],
				dl_maxtimes : [{required: true, message : '请输入每人最多参与次数（0为不限制）', trigger: 'blur'}],
				dl_maxwin : [{required: true, message : '请输入每人最多能中奖次数（0为不限制）', trigger: 'blur'}],
				dl_has_sponsor : [{required: true, message : '请选择是否有赞助商家', trigger: 'blur'}],
				dl_has_ad : [{required: true, message : '请选择主页面是否需要广告', trigger: 'blur'}],
				dl_has_design : [{required: true, message : '请选择是否有提供设计', trigger: 'blur'}],
				dl_design : [{required: false, message : '请输入设计需求（有提供设计时，必须填写）', trigger: 'blur'}],
				dl_share_title : [{required: false, message : '请输入分享的标题内容（需要分享功能时，必须填写）', trigger: 'blur'}],
				dl_share_content : [{required: false, message : '请输入分享的描述信息（需要分享功能时，必须填写）', trigger: 'blur'}]
			}
		}
	},
	methods : {
		goBack() {
				this.$router.back(-1);
		},
		getInfo() {
			// 开启加载器
			const loading = this.$loading({
				lock: true,
				text: 'Loading',
				spinner: 'el-icon-loading',
				background: 'rgba(0, 0, 0, 0.7)'
			});
			this.$http.post(
				`${api.dev}/p/luckDraw/list/select`,
				{
					access_token: getToken(),
					dl_id: this.$route.params.id
				},
				{emulateJSON : true}
			).then(res => {
				if(res.body.code == 200) {
					var data = res.body.content;
						data.dl_starttime = formatDate(new Date(data.dl_starttime) , 'yyyy-MM-dd hh:mm:ss');
						data.dl_endtime = formatDate(new Date(data.dl_endtime) , 'yyyy-MM-dd hh:mm:ss');
						data.dl_time = [data.dl_starttime, data.dl_endtime];
						data.dl_has_ad = (data.dl_has_ad) ? '1' : '0' ;
						data.dl_has_sponsor = (data.dl_has_sponsor) ? '1' : '0' ;
						data.dl_has_design = (data.dl_has_design) ? '1' : '0' ;
					this.EditForm = data;
					loading.close();
				}else if(res.body.code == 500) {
					this.$message({
						message: res.body.msg,
						type: 'error'
					});
					loading.close();
				}else if(res.body.code == 510) {
					this.$message({
						message: res.body.msg,
						type: 'error'
					});
					removeToken();
					setTimeout(function () {
						this.$router.push({path: '/login'})
					},2000)
				}
			})
		},
		/* 编辑提交 */
		/* 编辑提交 */
		submitEditForm(formName) {
		  this.$refs[formName].validate((valid) => {
			  if(valid) {
					// 开启加载器
					const loading = this.$loading({
						lock: true,
						text: '正在保存中...',
						spinner: 'el-icon-loading',
						background: 'rgba(0, 0, 0, 0.7)'
					});
					debugger;
					var formdata = new FormData(),
						dl_starttime = formatDate(new Date(this.EditForm.dl_time[0]) , 'yyyy-MM-dd hh:mm:ss'),
						dl_endtime = formatDate(new Date(this.EditForm.dl_time[1]) , 'yyyy-MM-dd hh:mm:ss');
							
					formdata.append('access_token',getToken());
					formdata.append('dl_id',this.EditForm.dl_id);
					formdata.append('dl_name',this.EditForm.dl_name);
					formdata.append('dl_rule',this.EditForm.dl_rule);
					formdata.append('dl_starttime',dl_starttime);
					formdata.append('dl_endtime',dl_endtime);
					formdata.append('dl_content',this.EditForm.dl_content);
					formdata.append('dl_limit',this.EditForm.dl_limit);
					formdata.append('dl_maxtimes',this.EditForm.dl_maxtimes);
					formdata.append('dl_maxwin',this.EditForm.dl_maxwin);
					formdata.append('dl_has_sponsor',this.EditForm.dl_has_sponsor);
					formdata.append('dl_has_ad',this.EditForm.dl_has_ad);
					formdata.append('dl_has_design',this.EditForm.dl_has_design);
					formdata.append('dl_design',this.EditForm.dl_design);
					formdata.append('dl_share_title',this.EditForm.dl_share_title);
					formdata.append('dl_share_content',this.EditForm.dl_share_content);
					this.$http.post(
						`${api.dev}/p/luckDraw/list/update`,
						formdata,
						{emulateJSON:true}
					).then(res => {
						loading.close();
						if(res.body.code == 200) {
							this.$message({
								message: res.body.msg,
								type: 'success'
							});
							this.loading = false;
							this.$router.back(-1);
						}else if(res.body.code == 500) {
							this.$message({
								message: res.body.msg,
								type: 'error'
							});
							this.loading = false;
						}else if(res.body.code == 510) {
							this.$message({
								message: res.body.msg,
								type: 'error'
							});
							removeToken();
							setTimeout(function () {
								this.$router.push({path: '/login'})
							},2000)
						}
					})
			  }else {
				  console.log('error submit');
				  return false;
			  }
		  })
		}
	},
	created() {
		this.getInfo();
	}
}
</script>

