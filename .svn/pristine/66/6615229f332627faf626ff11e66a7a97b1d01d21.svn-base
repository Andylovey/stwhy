            //     this.editUploadFileList.push({url: `${api.address}${arr[i]}`});
            // }
            for(var i = 0 ; i < res.body.content.ad_imgs.length ; i++) {
                this.editUploadFileList.push({url: `${api.address}${res.body.content.ad_imgs[i]}`})
            }
            // 过滤
            this.EditForm.vl_type = (res.body.content.vl_type).toString();
            this.EditForm.vl_vote_sort = (res.body.content.vl_vote_sort).toString();
        }else if(res.body.code == 500) {
            this.$message({
                message: res.body.msg,
                type: 'error'
            });
            removeToken();
            setTimeout(function () {
                window.location.href = '/stwhy';
            },2000)
        }
      })
