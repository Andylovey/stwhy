<template>
  <div>
    <el-form ref="DetailForm" :model="DetailForm" style="margin-top:10px;margin-bottom:60px;">
        <el-row type="flex" class="row-bg">
          <el-col :span="7">
              <el-form-item label="名称" prop="sl_name" label-width="120px">
                  <el-input style="width:16em" v-model="DetailForm.sl_name" readonly></el-input>
              </el-form-item>
          </el-col>
      </el-row>
      <el-row type="flex" class="row-bg">
            <el-col :span="7">
                <el-form-item label="所属投票名称" prop="vl_name" label-width="120px">
                    <el-input style="width:16em" v-model="DetailForm.vl_name" readonly></el-input>
                </el-form-item>
            </el-col>
            <el-col :span="7">
                <el-form-item label="手机号码" prop="sl_phone" label-width="120px">
                    <el-input style="width:16em" v-model="DetailForm.sl_phone" readonly></el-input>
                </el-form-item>
            </el-col>
      </el-row>
      <el-row type="flex" class="row-bg">
            <el-col :span="14">
                <el-form-item label="介绍" prop="sl_introduction" label-width="120px">
                  <el-input  :rows="3" style="width:100%" type="textarea" v-model="DetailForm.sl_introduction" readonly></el-input>
                </el-form-item>
            </el-col>
      </el-row>
      <el-row type="flex" class="row-bg">
          <el-col :span="14">
              <el-form-item label="图片(最多3张)" prop="sl_img_url" label-width="120px">
                <el-upload
                    disabled
                    :class="{disabled:uploadDisabled}"
                    :limit="3"
                    :action="DetailUploadUrl"
                    list-type="picture-card"
                    :on-preview="handleDetailPreview"
                    :file-list="DetailUploadFileList">
                    <i class="el-icon-plus"></i>
                </el-upload>
                <el-dialog :visible.sync="DetailPreviewDialogVisible">
                    <img width="100%" :src="DetailPreviewDialogImageUrl" alt="">
                </el-dialog>
              </el-form-item>
          </el-col>
      </el-row>
    </el-form>

    <el-footer>
      <el-button type="primary" @click="goBack" size="small" icon="el-icon-arrow-left">返回</el-button>
    </el-footer>
  </div>
</template>

<script>
// 引入接口
import api from '@/api/api.js'
// 获取token
import { getToken , removeToken } from '@/utils/auth'

export default {
  name: 'componentspage1',
  data() {
      return {
          DetailForm : {},
          DetailUploadUrl : `${api.dev}/p/vote/manager/uploadFile?access_token=${getToken()}`, // 上传图片路径
          DetailUploadFileList : [],
          DetailPreviewDialogVisible : false,
          DetailPreviewDialogImageUrl : '',
          uploadDisabled : true
      }
  },
  methods : {
    getInfo() {
        this.$http.post(`${api.dev}/p/vote/signup/select`,{access_token: getToken(), sl_id : this.$route.params.id},{emulateJSON:true}).then(res => {
            if(res.body.code == 200) {
                this.DetailForm = res.body.content;
                
                for(var i = 0 ; i < this.DetailForm.sl_img_url.length ; i++) {
                    this.DetailUploadFileList.push({url:`${api.address}${this.DetailForm.sl_img_url[i]}`})
                }
            }else if(res.body.code == 500) {
                this.$message({
                    message: res.body.msg,
                    type: 'error'
                });
                removeToken();
                setTimeout(function () {
                    window.location.href = '/stwhy';
                },2000)
            }
        })
    },
    // 放大图片
    handleDetailPreview(file) {
        this.DetailPreviewDialogVisible = true;
        this.DetailPreviewDialogImageUrl = file.url;
    },
    // 返回
    goBack() {
        this.$router.back(-1);
    },
  },
  created() {
    this.getInfo();
  },
}
</script>

